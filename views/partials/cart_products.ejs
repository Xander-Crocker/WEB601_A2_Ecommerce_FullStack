

<!-- Product image -->
<div class="col-md-2 col-lg-2 col-xl-2">
    <img src="<%=  %>" class="img-fluid rounded-3" alt="Product Image">
</div>
<%= product %>
    <!-- I want to display the key and the value for each key/value pair in options.  -->
    <!-- Product details -->
    <div class="col-md-3 col-lg-3 col-xl-3">
        <p class="lead fw-normal mb-2"><%= product.title%></p>
        <% product.options.keys().forEach(function(key){ %>
            <p>
                <span class="text-muted"><%= key %>: <%= product.options[key] %></span>
            </p>
        <% }); %>
    </div>

<!-- Quantity of product -->
<div class="col-md-3 col-lg-3 col-xl-2 d-flex">
    <button class="btn btn-link px-2" onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
        <i class="fas fa-minus"></i>
    </button>
    
        <input id="form1" min="0" name="quantity" value="<%= product.quantity %>" type="number" class="form-control form-control-sm" />
    
    <button class="btn btn-link px-2" onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
        <i class="fas fa-plus"></i>
    </button>
</div>

<!-- Price of product -->
<div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
    <h5 class="mb-0"><%=  %></h5>
</div>
