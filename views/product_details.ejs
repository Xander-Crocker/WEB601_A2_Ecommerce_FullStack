<!DOCTYPE HTML>
<html>
<head>
<title>Free Adidas Website Template | Single </title>
<%- include('partials/head.ejs'); %>				
</head>
<body>
	<%- include('partials/header.ejs'); %>
	<%- include('partials/navigation.ejs'); %>
    <div class="header-bottom">
    <div class="wrap">

            <div class="clear"></div>
        </div>
        </div>
        <div class="single">
            <div class="wrap">
		<div class="cont span_2_of_3">
			<div class="labout span_1_of_a1">
				<!-- start product_slider -->
                <!-- <ul id="etalage">
                    <li>
                        <a href="optionallink.html">
                            <img class="etalage_thumb_image" src="<%= product.images[0].src %>" />
                        </a>
                    </li>
                </ul> -->
                <img class="etalage_thumb_image" src="<%= product.images[0].src %>" />
			<!-- end product_slider -->
			</div>
			<div class="cont1 span_2_of_a1">
                <p id="id" hidden><%= product.id %></p>

				<h3 class="m_3"><%= product.title %></h3>
				
				<div class="price_single">
                    <span class="actual"><%= Intl.NumberFormat('en-NZ', { style: 'currency', currency: 'NZD' }).format(product.variants[0].price / 100) %></span>
                </div>

                <div>
                    <%- include('partials/rating.ejs'); %>
                </div>

                <p class="m_desc"><%=product.tags.join(', ')%></p>
                <br>

                <% product.options.forEach(function(option){ %>


                    <ul class="options">
                        <h4 class="m_9">Select a <%= option.name %></h4>
                        
                        <fieldset>
                            <% option.values.forEach(function(value){ %>
                                <li>
                                    <input type="radio" name="<%= option.name %>" id="<%= option.title %>">
                                    <% if(value.colors) { %>
                                        <svg width="20" height="20">
                                            <rect width="20" height="20" style="fill: <%= value.colors[0] %>;stroke-width:3;stroke:rgb(0,0,0)" />
                                        </svg>
                                    <% }; %>
                                    <label for="<%= value.title %>"><%= value.title %></label>
                                </li>
                            <% }); %>
                        </fieldset>
                        <br>
                        <br>
                    </ul>

                <% }); %>    
                
				<h4 class="m_9">Quantity</h3>
                <input type="number" name="quantity" id="quantity" min="1" value="1">


				<ul class="add-to-links">
                    <li><button type="button" id="add_to_cart" class="add_to_cart_btn">Add to Cart</button></li> 
                    <li><button type="button" class="add_to_cart_btn">Add to Wishlist</button></li>
                </ul>

			</div>
			<div class="clear"></div>   
    
	<div class="toogle">
        <h3 class="m_3">Product Details</h3>
        <p class="m_text"><%- product.description %></p>
    </div>					
